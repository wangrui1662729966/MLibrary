<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zenchn.librarydemo.widget.LiveCameraView
        android:id="@+id/lcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/bt_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="openCamera"
        android:text="打开摄像头"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/bt_open_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_open"
        android:layout_marginTop="5dp"
        android:onClick="openLight"
        android:text="打开闪光灯"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/bt_close_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_open_light"
        android:layout_marginTop="5dp"
        android:onClick="closeLight"
        android:text="关闭闪光灯"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/bt_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_close_light"
        android:layout_marginTop="5dp"
        android:onClick="closeCamera"
        android:text="关闭摄像头"
        android:textSize="15sp"/>

</RelativeLayout>